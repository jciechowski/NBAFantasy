@using NBAFantasy.Models
@model IEnumerable<Player>

@{
    ViewBag.Title = "Teams";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Team details</h2>

<p>
    <a asp-action="AddPlayers">Add players</a>
</p>
<table class="table">
    @using (Html.BeginForm())
    {
        <tr>
            <th>Selection</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Position)</th>
            <th>@Html.DisplayNameFor(model => model.Team)</th>
        </tr>
        foreach (var player in Model)
        {
            <tr>
                <td>@Html.CheckBoxFor(model => player.Selected)</td>
                <td>@Html.DisplayFor(model => player.Name)</td>
                <td>@Html.DisplayFor(model => player.Position)</td>
                <td>@Html.DisplayFor(model => player.Team)</td>
            </tr>
        }
    }
</table>
<p>
    <input type="submit" value="Save" />
</p>