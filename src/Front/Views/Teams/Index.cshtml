@using NBAFantasy.Models
@model IEnumerable<Team>

@{
    ViewBag.Title = "Teams";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/js/controllers/team.js"></script>

<div>

    <h2>Team</h2>
    <p>
        <a asp-action="Create">Create new</a>
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GM)
            </th>
        </tr>
        @foreach (var team in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(model => team.Name)
                </td>
                <td>
                    @Html.DisplayFor(model => team.GM)
                </td>

                <td>

                    <a class="glyphicon glyphicon-edit" asp-action="Edit" asp-route-id="@team.Id">Edit</a> |
                    <a class="glyphicon glyphicon-expand" asp-action="Details" asp-route-id="@team.Id">Details</a> |
                    <a class="glyphicon glyphicon-remove" asp-action="Delete" asp-route-id="@team.Id">Delete</a>
                </td>
            </tr>
        }
    </table>
</div>
